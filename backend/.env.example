# Backend Configuration
PORT=5000
NODE_ENV=development

# Database
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/healthlink?retryWrites=true&w=majority
TEST_MONGODB_URI=mongodb://localhost:27017/healthlink-test

# JWT Secret (Generate your own with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))")
JWT_SECRET=your-super-secret-jwt-key-change-this-to-a-random-64-character-string
JWT_EXPIRE=7d

# Frontend URL (for CORS)
CLIENT_URL=http://localhost:5173

# Email Configuration (Optional - for automated notifications)
# Get Gmail App Password: https://myaccount.google.com/apppasswords
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-16-digit-app-password

# Render Deploy Hooks (Optional - for CI/CD)
# Get from: Render Dashboard → Service → Settings → Deploy Hook
RENDER_BACKEND_DEPLOY_HOOK=https://api.render.com/deploy/srv-xxxxx
RENDER_FRONTEND_DEPLOY_HOOK=https://api.render.com/deploy/srv-yyyyy

# Feature Flags (Optional)
ENABLE_CRON_JOBS=false
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_BACKUP_AUTOMATION=false